#:kivy 1.10.0

<ThumbView>:
    orientation:'vertical'
    padding: '10dp', '10dp'
    spacing: '10dp'
    
    BoxLayout:
        orientation:'horizontal'
        size_hint:(1,None)
        height: '38sp'

        Label:
            text: "Path:  "
            size: self.texture_size
            bold: True
            color: [0, 0, 1, 1]
            font_hinting: 'mono'
            font_size: '20sp'
            size_hint_x:None
            # width:'30sp'
            size_hint_y:None
            height:'30sp'

        TextInput:
            id: idpath
            text: 'f:\\tmp'
            multiline: False
            size_hint_y:  None
            height: '30sp'
            # size_hint_x:  None
            # width: '500sp'

        Button:
            text: "Aplicar"
            size_hint_x:  None
            width: '100sp' 
            size_hint_y:  None
            height: '30sp'
            pos_hint: {'x':0, 'right': 1}
            on_release:
                root.aplicar('a cada lado')

    BoxLayout:
        anchor_x:'center'
        anchor_y:'bottom'
        size_hint:(1,.8)
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
    BoxLayout:
        size_hint:(1,.3)
        # height:root.ids.imgview.height 
        Image:
            id:imgview
            anim_delay: 1
            mipmap: True
            allow_stretch: True
            

    BoxLayout:
        anchor_x:'center'
        anchor_y:'bottom'
        size_hint:1,.2
        BoxLayout:
            orientation:'vertical'
            GeneralOptions:
                id: _general_option
                size_hint: 1, None
                height:'48sp'
            StatusBar:
                id:_status_bar
                size_hint:1, None
                height:'30sp'

<Thumb>:
    size_hint_y:None
    height:'130sp'
    ButtonThumb:
        id:imgview
        anim_delay: 1.5
        mipmap: True
        allow_stretch:True
        size_hint_x:None
        width:'200sp'
        on_release:
            app.root.ids.imgview.source=root.ids.imgview.source
            root.addate_image(root.ids.imgview.source)
    Mensaje:
        id:label
        font_size:'20sp'
        text:'None'

<GeneralOptions@BoxLayout>:
    orientation:'horizontal'
    padding:'2sp'
    Button:
        text:'Clear'
    Button:
        text:'Remove'
    Button:
        text:'Make'
    Button:
        text:'Open'
    ToggleButton:
        text:'Gestionar'

<StatusBar@BoxLayout>:
    orientation:'horizontal'
    Label:
        id: label_a
        text: 'Total Thumbs: ?'
    Label:
        id: label_b
        text: 'Kivy started'
    